extends ../layout

block content
  .row
    .content.col-md-8.offset-md-2
      .row
        h1.col-md-12 How was your day today?
          p Don't you need to leave some memories?
        h3.col-md-6.offset-md-6
          a(href='/tech_diaries/new') Keep in New Diary Here
      .row
        table.col-md-12
          tr.row
            th.col-md-6 Title
            th.col-md-6 Content
          -for (let i = 0; i < diaries.length; i++)
            tr.row
              td.col-md-6= diaries[i].dataValues.diary_title
              td.col-md-6= diaries[i].dataValues.diary_body
